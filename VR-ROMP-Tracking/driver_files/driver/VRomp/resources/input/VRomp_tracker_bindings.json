{
  "jsonid": "input_profile",
  "controller_type": "TRACKER",
  "device_class": "TrackedDeviceClass_GenericTracker",
  "resource_root": "VRomp",
  "driver_name": "VRomp",
  "input_bindingui_mode": "single_device",
  "should_show_binding_errors": true,
  "input_bindingui_left": {
    "transform": "scale(-1,1)",
    "image": "{VRomp}/icons/VRomp_tracker.svg"
  },
  "input_bindingui_right": {
    "image": "{VRomp}/icons/VRomp_tracker.svg"
  },
  "input_source": {
    "/pose/raw": {
      "type": "pose",
      "binding_image_point": [ 0, 0 ]
    },
    "/output/haptic": {
      "type": "vibration",
      "binding_image_point": [ 0, 0 ]
    },
    "/input/system": {
      "type": "button",
      "click": true,
      "binding_image_point": [ 0, 0 ]
    }
  }
}
